data <- data.frame(
  gender = c("Male", "Male", "Female", "Female"),
  purchase = c("Yes", "No", "Yes", "No"),
  count = c(30, 70, 50, 50)
)

table_data <- xtabs(count ~ gender + purchase, data) # êµì°¨í‘œ ìƒì„±
table_data

chisq.test(table_data)$expected #ê¸°ëŒ€ë¹ˆë„ í™•ì¸

test_result <- chisq.test(table_data) #ì¹´ì´ì œê³± ê²€ì • ì‹¤í–‰
test_result

ggplot(data, aes(x = gender, y = count, fill = purchase)) +
  geom_bar(stat = "identity", position = "dodge") +
  labs(title = "ì„±ë³„ì— ë”°ë¥¸ êµ¬ë§¤ ì—¬ë¶€", y = "ê³ ê° ìˆ˜", x = "ì„±ë³„") +
